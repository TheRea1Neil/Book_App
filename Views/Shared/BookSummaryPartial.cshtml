@{

}
@model Book
<tr>
    <td>@Model.Title</td>
    <td>@Model.Author</td>
    <td>@Model.Publisher</td>
    <td>@Model.Isbn</td>
    <td>@Model.Classification</td>
    <td>@Model.Category</td>
    <td>@Model.PageCount</td>
    <td>@Model.Price.ToString("C")</td> <!-- Format as currency -->
    <td>
        <form id="@Model.BookId" method="post" asp-page="/Cart">
            <input type="hidden" asp-for="BookId" />
            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()"/>
        <button type="submit" class="btn-outline-success">Purchase</button>
        </form>
    </td>
</tr>